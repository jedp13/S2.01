<Window x:Name="wdwCategorieMateriel" x:Class="MatInfo.CategorieMateriel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatInfo"
        mc:Ignorable="d"
        Title="CategorieMateriel" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btCM" Content="Categorie de materiel" Margin="20,0,0,0" Click="btCM_Click" />
            <Button x:Name="btM" Content="Materiel" Margin="20,0,0,0" Click="btM_Click"/>
            <Button x:Name="btA" Content="Attribution" Margin="20,0,0,0" Click="btA_Click"/>
            <Button x:Name="btP" Content="Personnel" Margin="20,0,0,0" Click="btP_Click"/>

        </StackPanel>
        <Label x:Name="lbCategorieMateriel" Content="Categorie de materiel" HorizontalAlignment="Center"/>
        <Label x:Name="lbListe" HorizontalAlignment="Left" Content="Liste des categories de materiel" Margin="20,0,0,0" />

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
        <ListBox x:Name="lboxListeCM" Width="406" d:ItemsSource="{d:SampleData ItemCount=5}" Height="318" Margin="20,0,0,0"/>
        <StackPanel Width="307">
            <Button x:Name="btCreer" Content="Créer" Width="252" Height="40" Margin="40,30,0,0" HorizontalAlignment="Center"/>
            <Button x:Name="btModifier" Content="Modifier" Width="252" Height="40" Margin="40,30,0,0"/>
                <Button x:Name="btSupprimer" Content="Supprimer" Width="252" Height="40" Margin="40,30,0,0"/>
            </StackPanel>
        

    </StackPanel>
        
    </StackPanel>
</Window>
